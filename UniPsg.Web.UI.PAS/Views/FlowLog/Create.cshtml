@model UniPsg.Model.PAS.ViewModels.FlowLogViewModel
@{
    ViewBag.Title = "流程修改記錄新增";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h5><i class="fa fa-key" aria-hidden="true"> &nbsp;管理設定</i>  &nbsp;&gt;&nbsp; <a href="@Url.Action("Index","FlowLog")">流程修改記錄</a>  &nbsp;&gt;&nbsp; 流程修改記錄新增 </h5>
<center><h4>@ViewBag.Title</h4></center>
<div class="form-horizontal">
    <hr />
    @using (Html.BeginForm("Create", "Role", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.BeforContent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.BeforContent, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.BeforContent, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AfterContent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.AfterContent, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.AfterContent, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="~/FlowLog" class="btn btn-warning">不儲存退出</a>
                <input type="submit" value="儲存" class="btn btn-success" />               
                @Html.HiddenFor(m => m.Creator, new { @Value = @User.Identity.Name })               
            </div>
        </div>
    }
</div>

