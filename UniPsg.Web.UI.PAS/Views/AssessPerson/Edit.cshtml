@using UniPsg.Web.UI.PAS.Utility.Enums
@model UniPsg.Model.PAS.ViewModels.AssessPersonViewModel


@{
    ViewBag.Title = "考核人員修改";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h5><i class="fa fa-cog" aria-hidden="true"> &nbsp;設定管理</i>  &nbsp;&gt;&nbsp; <a href="@Url.Action("Index","AssessPerson")">考核人員</a> &nbsp;&gt;&nbsp; 考核人員修改 </h5>
<center><h4>@ViewBag.Title</h4></center>
<div class="form-horizontal">
    <hr />
    @using (Html.BeginForm("Edit", "AssessPerson", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.ProjectName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(m => m.ProjectName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FormId, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(m => m.FormId, new SelectList(ViewBag.Forms, "Id", "Name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FormId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.GroupId, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(m => m.GroupId, new SelectList(ViewBag.Groups, "Id", "Name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.GroupId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Reviewer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Reviewer, new { htmlAttributes = new { @class = "form-control" } })
                <br />
                註：請輸入員編，例如：00167。
                @Html.ValidationMessageFor(m => m.Reviewer, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EmployeeName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(m => m.EmployeeName, new { htmlAttributes = new { @class = "form-control" } })
                
                @Html.ValidationMessageFor(m => m.EmployeeName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(m => m.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                <br />
                註：請輸入民國年月日，例如：1060401。
                @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.TryDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(m => m.TryDate, new { htmlAttributes = new { @class = "form-control" } })
                <br />
                註：請輸入民國年月日，例如：1060401。
                @Html.ValidationMessageFor(m => m.TryDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BranchCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                @Html.EditorFor(m => m.BranchCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.BranchCode, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(m => m.BranchName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.BranchName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DeptCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                @Html.EditorFor(m => m.DeptCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.DeptCode, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(m => m.DeptName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.DeptName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.JobCap, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                @Html.EditorFor(m => m.JobCap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.JobCap, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(m => m.JobCapName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.JobCapName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.JobPos, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                @Html.EditorFor(m => m.JobPos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.JobPos, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(m => m.JobPosName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.JobPosName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Education, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(m => m.Education, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Education, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EmployeeType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(m => m.EmployeeType, new SelectList(
                  new List<Object>{
                       new { value = "A" , text = "高階主管" },
                       new { value = "B" , text = "中階主管" },
                       new { value = "C" , text = "營業主管" },
                       new { value = "D" , text = "行政人員" },
                       new { value = "E" , text = "證券營業員" },
                       new { value = "F" , text = "債券營業員" },
                       new { value = "G" , text = "約雇人員" },
                       new { value = "H" , text = "董監事" },
                       new { value = "I" , text = "工讀生" },
                       new { value = "J" , text = "計件工讀生" },
                       new { value = "K" , text = "顧問" },
                       new { value = "L" , text = "專業人員" },
                       new { value = "M" , text = "理財人員" },
                       new { value = "N" , text = "菁英人員" }},
                  "value", "text"), "請選擇", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.EmployeeType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(m => m.Status, new SelectList(
                  new List<Object>{
                       new { value = 0 , text = "啟用" },
                       new { value = 1 , text = "停用" }},
                  "value", "text"), "請選擇", new { @class = "form-control" })
                <br />
                註：0為啟用、1為停用。
                @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
            </div>
        </div>        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="~/AssessPerson" class="btn btn-warning">不儲存退出</a>
                <input type="submit" value="儲存" class="btn btn-success" />
                @Html.HiddenFor(m => m.ProjectId)
                @Html.HiddenFor(m => m.EmployeeNo)
                @Html.HiddenFor(m => m.Modifier, new { @Value = @User.Identity.Name })
                
            </div>
        </div>
    }
</div>
