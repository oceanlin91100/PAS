@using UniPsg.Web.UI.PAS.Utility.Enums
@model UniPsg.Model.PAS.ViewModels.AssessPersonViewModel


@{
    ViewBag.Title = "審核人員修改";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h5><i class="fa fa-cog" aria-hidden="true"> &nbsp;設定管理</i>  &nbsp;&gt;&nbsp; <a href="@Url.Action("Index","AssessProject")">考核專案</a> &nbsp;&gt;&nbsp; 審核人員修改 </h5>
<center><h4>@ViewBag.Title</h4></center>
<div class="form-horizontal">
    <hr />
    @using (Html.BeginForm("Update", "AssessPerson", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Reviewer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Reviewer, new { htmlAttributes = new { @class = "form-control" } })
                <br />
                註：請輸入員編，例如：00167。
                @Html.ValidationMessageFor(m => m.Reviewer, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="~/AssessPerson/List?projectId=@ViewBag.ProjectId" class="btn btn-warning">不儲存退出</a>
                <input type="submit" value="儲存" class="btn btn-success" />
                @Html.HiddenFor(m => m.ProjectId)
                @Html.HiddenFor(m => m.EmployeeNo)
                @Html.HiddenFor(m => m.Modifier, new { @Value = @User.Identity.Name })
                @Html.HiddenFor(m => m.ProjectName)
                @Html.HiddenFor(m => m.FormId)
                @Html.HiddenFor(m => m.FormName)
                @Html.HiddenFor(m => m.GroupId)
                @Html.HiddenFor(m => m.GroupName)
                @Html.HiddenFor(m => m.EmployeeName)
                @Html.HiddenFor(m => m.StartDate)
                @Html.HiddenFor(m => m.TryDate)
                @Html.HiddenFor(m => m.BranchCode)
                @Html.HiddenFor(m => m.BranchName)
                @Html.HiddenFor(m => m.DeptCode)
                @Html.HiddenFor(m => m.DeptName)
                @Html.HiddenFor(m => m.JobCap)
                @Html.HiddenFor(m => m.JobCapName)
                @Html.HiddenFor(m => m.JobPos)
                @Html.HiddenFor(m => m.JobPosName)
                @Html.HiddenFor(m => m.Education)
                @Html.HiddenFor(m => m.EmployeeType)
                @Html.HiddenFor(m => m.Status)
            </div>
        </div>
    }
</div>
