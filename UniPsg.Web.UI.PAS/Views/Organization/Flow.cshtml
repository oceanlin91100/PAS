@using UniPsg.Web.UI.PAS.Utility.Enums
@model UniPsg.Model.PAS.ViewModels.OrganizationViewModel

@{
    ViewBag.Title = "人員流程修改";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h5><i class="fa fa-cog" aria-hidden="true"> &nbsp;設定管理</i>  &nbsp;&gt;&nbsp; <a href="@Url.Action("Index","AssessProject")">考核專案</a> &nbsp;&gt;&nbsp; 人員流程流程修改 </h5>
<center><h4>@ViewBag.Title</h4></center>
<div class="form-horizontal">
    <hr />
    @using (Html.BeginForm("Flow", "Organization", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.FlowPath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.FlowPath, new { htmlAttributes = new { @class = "form-control", @rows = "6" } })
                <br/>
                例如: 01012,84182,87188,87161 為完整的輸入流程。
                @Html.ValidationMessageFor(m => m.FlowPath, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FlowPath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.NamePath, new { @class = "form-control", @rows = "6" })
                <br/>
                例如: 吳淑娟(01012),林慶瑞(84182),胡懿德(87188),林榮輝(87161) 為完整的輸入流程。
                @Html.ValidationMessageFor(m => m.NamePath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="~/AssessPerson/List?projectId=@ViewBag.ProjectId" class="btn btn-warning">不儲存退出</a>
                <input type="submit" value="儲存" class="btn btn-success" />
                @Html.HiddenFor(m => m.ProjectId)
                @Html.HiddenFor(m => m.EmployeeNo)
                @Html.HiddenFor(m => m.EmployeeName)               
                @Html.HiddenFor(m => m.ProjectName)               
                @Html.HiddenFor(m => m.Account)
                @Html.HiddenFor(m => m.BranchCode)
                @Html.HiddenFor(m => m.BranchName)
                @Html.HiddenFor(m => m.DeptCode)
                @Html.HiddenFor(m => m.DeptName)
                @Html.HiddenFor(m => m.TeamCode)
                @Html.HiddenFor(m => m.TeamName)
                @Html.HiddenFor(m => m.ManagerNo)
                @Html.HiddenFor(m => m.ManageName)
                @Html.HiddenFor(m => m.ManageAccount)
                @Html.HiddenFor(m => m.Status)
                @Html.HiddenFor(m => m.Modifier, new { @Value = @User.Identity.Name })
            </div>
        </div>
    }
</div>

