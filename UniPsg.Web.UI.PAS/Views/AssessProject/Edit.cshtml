@using UniPsg.Web.UI.PAS.Utility.Enums
@model UniPsg.Model.PAS.ViewModels.AssessProjectViewModel

@{
    ViewBag.Title = "考核專案修改";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h5><i class="fa fa-cog" aria-hidden="true"> &nbsp;設定管理</i>  &nbsp;&gt;&nbsp; <a href="@Url.Action("Index","AssessProject")">考核專案</a> &nbsp;&gt;&nbsp; 考核專案修改 </h5>
<center><h4>@ViewBag.Title</h4></center>
<div class="form-horizontal">
    <hr />
    @using (Html.BeginForm("Edit", "AssessProject", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ViewStarDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ViewStarDate, new { @class = "form-control" })
                <p class="text-danger">註：請輸入西元年月日，例如：20170101。</p>
                @Html.ValidationMessageFor(m => m.ViewStarDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ViewEndDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ViewEndDate, new { @class = "form-control" })
                <p class="text-danger">註：請輸入西元年月日，例如：20171231。</p>
                @Html.ValidationMessageFor(m => m.ViewEndDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FromDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control" })
                <p class="text-danger">註：請輸入西元年月日，例如：20170101。</p>
                @Html.ValidationMessageFor(m => m.FromDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Deadline, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Deadline, new { @class = "form-control" })
                <p class="text-danger">註：請輸入西元年月日，例如：20171231。</p>
                @Html.ValidationMessageFor(m => m.Deadline, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AssessYear, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.AssessYear, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AssessYear, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.TryDatae, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.TryDatae, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TryDatae, "", new { @class = "text-danger" })
                <p class="text-danger">註：請輸入西元年月日，例如：20170401。</p>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CategoryId, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name"), "請選擇", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Groups, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Groups, "CheckBoxList",
                           new
                           {
                               TagName = "Groups",
                               CheckBoxItems = ViewBag.GroupItems,
                               Position = Position.Vertical,
                               Numbers = 3
                           })

                @Html.ValidationMessageFor(m => m.Groups, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Forms, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Forms, "CheckBoxList",
                           new
                           {
                               TagName = "Forms",
                               CheckBoxItems = ViewBag.FormItems,
                               Position = Position.Vertical,
                               Numbers = 3
                           })

                @Html.ValidationMessageFor(m => m.Forms, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Status, new SelectList(
                  new List<Object>{
                       new { value = 0 , text = "啟用" },
                       new { value = 1 , text = "停用" },
                       new { value = 2 , text = "結案" }},
                  "value", "text"), "請選擇", new { @class = "form-control" })
                <br />
                註：0為啟用、1為停用。
                @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Definition, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Definition, new { @class = "form-control", @rows = "6" })
                @Html.ValidationMessageFor(m => m.Definition, "", new { @class = "text-danger" })
            </div>
        </div>        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="~/AssessProject" class="btn btn-warning">不儲存退出</a>
                <input type="submit" value="儲存" class="btn btn-success" />
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.Modifier, new { @Value = @User.Identity.Name })
               
            </div>
        </div>
    }
</div>

