@model IEnumerable<UniPsg.Model.PAS.ViewModels.RoleMenuMappingViewModel>

@{
    ViewBag.Title = "角色選單權限清單";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h4><i class="fa fa-key" aria-hidden="true"> &nbsp;權限設定</i>  &nbsp;&gt;&nbsp; <a href="@Url.Action("Index","RoleMenuMapping")">角色選單權限</a></h4>
<center><h4>@ViewBag.Title</h4></center>
<div class="form-horizontal">
    <div align="left"><i class="fa fa-plus" aria-hidden="true"><a href="@Url.Action("Create", "RoleMenuMapping")"> 角色選單權限新增 </a></i></div>
    <table cellpadding="2" class="table" cellspacing="2" border="1">
        <tr class="btn-primary">
            <th> Id</th>
            <th> 角色</th>
            <th> 選單</th>
            <th> 狀態</th>
            <th> 修改時間</th>
            <th> </th>
        </tr>
        @if (ViewBag.ListClients != null)
            {
                foreach (var item in ViewBag.ListClients)
                {
                <tr class="btn-xs">
                    <td>@item.Id</td>
                    <td>@item.RoleId</td>
                    <td>@item.MenuId</td>
                    <td>@Helpers.GetStatusDisplayName(@item.Status)</td>
                    <td>@item.ModifiedDate.ToString()</td>
                    <td>
                        <i class="fa fa-trash-o" aria-hidden="true"><a onclick="return confirm('Do you want to Delete?')" href="@Url.Action("Delete", "RoleMenuMapping", new { id = item.Id })"> 刪除 </a></i>
                        &nbsp;||&nbsp; <i class="fa fa-pencil" aria-hidden="true"><a href="@Url.Action("Edit", "RoleMenuMapping",new { id = item.Id })"> 修改 </a></i>
                        &nbsp;||&nbsp;<i class="fa fa-info" aria-hidden="true"><a href="@Url.Action("Detail", "RoleMenuMapping",new { id = item.Id })"> 檢視 </a></i>
                    </td>
                </tr>
            }
        }
    </table>
</div>